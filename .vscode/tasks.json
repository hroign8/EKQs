{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Next.js app",
			"type": "shell",
			"command": "npm run build",
			"isBackground": false,
			"options": {
				"env": {
					"NODE_OPTIONS": "--max-old-space-size=4096"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}